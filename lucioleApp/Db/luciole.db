record(longout, "$(B):$(E):LIGHT_CH$(Ch)"){
    field(DESC, "Light value channel $(Ch)")
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))LIGHT_CH$(Ch)_LONGOUT_VAL")
}

record(stringin, "$(B):$(E):LIGHT_STATE_CH$(Ch)"){
    field(DESC, "Light value channel $(Ch)")
    field(DTYP, "asynOctetRead")
    field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))LIGHTSTATE_CH$(Ch)_STRINGIN_VAL")
    field(SCAN, "I/O Intr")
}

